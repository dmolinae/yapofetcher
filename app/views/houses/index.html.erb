<p id="notice"><%= notice %></p>

<h1>Houses</h1>

<%= button_to 'Scrape', scrape_houses_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Rooms</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.title %></td>
        <td><%= house.price %></td>
        <td><%= house.rooms %></td>
        <td><%= house.url %></td>
        <td><%= link_to 'Show', house %></td>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New House', new_house_path %>
